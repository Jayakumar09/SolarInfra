
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if the current user is an admin
    function isAdmin() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for user-specific documents
    match /users/{userId}/{allPaths=**} {
      // Users can only read/write their own folder
      // Admins can read/write any user's folder
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Catch-all for public/shared assets if needed (currently deny all)
    match /{allPaths=**} {
      allow read: if request.auth != null && isAdmin();
      allow write: if request.auth != null && isAdmin();
    }
  }
}
